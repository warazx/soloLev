<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kringlan.sololev.view.OrderListActivity">

    <Button
        android:text="Add order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add"
        android:onClick="addNewOrder"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_add">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:text="Load orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_load"
        android:onClick="loadOrders"
        android:layout_alignBaseline="@+id/button_add"
        android:layout_toEndOf="@+id/button_add" />

</RelativeLayout>
